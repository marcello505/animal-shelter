@model Core.Models.AnimalSubmission

<h4>AnimalSubmission</h4>
@await Component.InvokeAsync("SpotsLeft")
<hr />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DogOrCat" class="control-label"></label>
                <br />
                <input asp-for="DogOrCat" type="radio" name="DogOrCat" value="dog" /> Dog <br />
                <input asp-for="DogOrCat" type="radio" name="DogOrCat" value="cat" /> Cat <br />
                <span asp-validation-for="DogOrCat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <br />
                <input asp-for="Gender" type="radio" name="Gender" value="f" /> Female <br />
                <input asp-for="Gender" type="radio" name="Gender" value="m" /> Male
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CastratedOrSterilized" /> @Html.DisplayNameFor(model => model.CastratedOrSterilized)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ReasonForLeavingOwner" class="control-label"></label>
                <textarea asp-for="ReasonForLeavingOwner" class="form-control"></textarea>
                <span asp-validation-for="ReasonForLeavingOwner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
