@model IEnumerable<ManagementApplication.Models.AnimalViewModel>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Age)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.DogOrCat)</th>
            <th>@Html.DisplayNameFor(model => model.Breed)</th>
            <th>@Html.DisplayNameFor(model => model.Gender)</th>
            <th>@Html.DisplayNameFor(model => model.DateOfArrival)</th>
            <th>@Html.DisplayNameFor(model => model.CastratedOrSterilized)</th>
            <th>@Html.DisplayNameFor(model => model.SafeForKids)</th>
            <th>@Html.DisplayNameFor(model => model.Treatments)</th>
            <th>@Html.DisplayNameFor(model => model.Adoptable)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Age)</td>
            <td>@Html.DisplayFor(modelItem => item.Description)</td>
            <td>@Html.DisplayFor(modelItem => item.DogOrCat)</td>
            <td>@Html.DisplayFor(modelItem => item.Breed)</td>
            <td>@Html.DisplayFor(modelItem => item.Gender)</td>
            <td>@Html.DisplayFor(modelItem => item.DateOfArrival)</td>
            <td>@Html.DisplayFor(modelItem => item.CastratedOrSterilized)</td>
            <td>@Html.DisplayFor(modelItem => item.SafeForKids)</td>
            <td>@Html.DisplayFor(modelItem => item.Treatments)</td>
            <td>@Html.DisplayFor(modelItem => item.Adoptable)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
